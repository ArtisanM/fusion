<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/tv_flutter_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Flutter普通页面场景"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tv_transparent_flutter_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Flutter透明页面场景"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tv_flutter_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Flutter子页面场景"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tv_flutter_viewpager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="ViewPager场景"
            android:textSize="18sp"
            android:visibility="gone"/>
    </LinearLayout>
</RelativeLayout>
